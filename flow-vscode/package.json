{
  "name": "flow-language",
  "displayName": "Flow Language",
  "version": "0.0.1",
  "publisher": "local",
  "engines": { "vscode": "^1.80.0" },
  "contributes": {
    "languages": [
      {
        "id": "flow",
        "aliases": ["flow", "Flow"],
        "extensions": [".flow"]
      }
    ],
    "grammars": [
      {
        "language": "flow",
        "scopeName": "source.flow",
        "path": "./syntaxes/flow.tmLanguage.json"
      },
      {
        "scopeName": "markdown.flow.codeblock",
        "path": "./syntaxes/flow-markdown-injection.json",
        "injectTo": ["text.html.markdown"],
        "embeddedLanguages": {
          "meta.embedded.block.flow": "flow"
        }
      }
    ]
  }
}
